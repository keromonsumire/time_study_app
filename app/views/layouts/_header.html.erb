<header class="navbar navbar-fixed-top">
      <div class="container" id="header">
        <div class="logo"> 
          <%= link_to image_tag("logo2.jpeg"), root_path, id: "logo" %>
        </div>
        <nav>
          <ul class="nav navbar-nav navbar-right">
              <%= link_to "トップページ", root_path, class: "nav-link" %>
              <% if logged_in? %>
              <%= link_to "統計", statictics_path, class: "nav-link" %>
              <%= link_to "設定", edit_user_path(current_user), class: "nav-link" %>
              <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
              <% if current_user.admin? %>
              <%= link_to "ユーザー一覧", "/users", class: "nav-link" %>
              <% end %>
              <% else %>
              <%= link_to "ログイン", login_path, class: "nav-link" %>
              <% end %>
          </ul>
        </nav>
      </div>
    </header>