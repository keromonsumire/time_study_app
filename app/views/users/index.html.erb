<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
    <div>
      <%= user.name %>
    </div>
    <div>  
      <%= user.email %>
    </div>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
    <% end %>
    </li>
    </br>
  <% end %>
</ul>

<%= will_paginate %>